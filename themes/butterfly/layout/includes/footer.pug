#footer-wrap
  if theme.footer.theme == 'default' && theme.footer.owner.enable
    - var now = new Date()
    - var nowYear = now.getFullYear()
    if theme.footer.owner.since && theme.footer.owner.since != nowYear
      .copyright!= `&copy;${theme.footer.owner.since} - ${nowYear} By ${config.author}`
    else
      .copyright!= `&copy;${nowYear} By ${config.author}`
  if theme.footer.theme == 'default' && theme.footer.copyright
    .framework-info
      span= _p('footer.framework') + ' '
      a(href='https://hexo.io')= 'Hexo'
      span.footer-separator |
      span= _p('footer.theme') + ' '
      a(href='https://github.com/jerryc127/hexo-theme-butterfly')= 'Butterfly'
  if theme.footer.custom_text
    .footer_custom_text!=`${theme.footer.custom_text}`

  if theme.footer.theme == 'badge' 
    each badge in theme.footer.badges
      div.github-badge
        a(href=badge.href, target="_blank")
        span.badge-subject=badge.subject
        span.badge-value.bg-blue=badge.value
    div.github-badge
      a(href="https://beian.miit.gov.cn/", target="_blank", title="版权，ICP备案")
      span.badge-subject!=`Copyright`
      span.badge-value.bg-blue!=`&copy;${theme.footer.owner.since} - ${theme.footer.owner.icp}`